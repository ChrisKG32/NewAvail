template(name='Sessions')
	if Template.subscriptionsReady
		.sessions
			if selectedSession
				with selectedSession
					+EditSession
			else
				.container.col-xs-12
					table.table.table-striped.table-fixed
						thead
							tr
								th.col-xs-3.text-center
									i.fa.fa-calendar(data-date="" id="datepicker")
									span.sorting
										| Date
										i.fa.fa-caret-down.recent
								th.col-xs.6.text-center
									| Game
								th.col-xs-3.text-center
									span.sort-result
										| Result
										i.fa
					.table-content
						table.table.table-striped
							tbody.text-center
								each userSessions
									tr
										td.col-xs-2.dates
											| !{this.details.date}
										td.col-xs-8
											| !{this.details.name}
										td.col-xs-2.results
											| !{this.details.result}
					if singleDay
						.col-xs-10.col-xs-offset-1
							h4.text-center
								| Total: !{singleDay}
	else
		+Loading